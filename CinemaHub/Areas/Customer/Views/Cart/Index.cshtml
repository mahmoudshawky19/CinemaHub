@if (Model.Count == 0)
{
    <div class="no-movies-container">
        <div class="no-movies-message">
            <h1>No Movies Available</h1>
            <p>We are sorry, but there are no movies available at the moment.</p>
            <p class="text-muted">Please check back later or explore other options.</p>
            <a href="/Customer/Home" class="btn btn-outline-primary">Go to Home</a>
        </div>
    </div>
} else
{  
<form method="post">
    <br />
    <div class="card shadow border-0">
        <div class="card-header bg-secondary bg-gradient text-light ml-0 py-4">
            <div class="row px-4">
                <div class="col-6">
                    <h5 class="pt-2 text-white">
                        Shopping Cart
                    </h5>
                </div>

            </div>
        </div>
        <div class="card-body my-4">
            <div class="row">
            </div>
            <div class="row mb-3 pb-3">
                <div class="col-md-2 offset-md-1">
                    <a href="#" class="btn btn-outline-primary text-uppercase mb-5 btn-sm"><small>Continue Shopping</small></a>
                </div>
                <div class="col-md-10 offset-md-1">

                    @foreach (var item in Model)
                    {
                        <div class="row border-bottom pb-3">
                            <div class="d-none d-lg-block col-lg-1 text-center py-2">
                                <img src="~/movies/@item.Movie.ImgUrl" class="rounded" width="100%" />
                            </div>
                            <div class="col-12 col-lg-6 pt-md-3">
                                <h5 class="text-uppercase text-secondary"><strong>@item.Movie.Name</strong></h5>
                                <p><small>@item.Movie.Description</small></p>
                            </div>
                            <div class="col-12  col-lg-5 text-center row">
                                <div class="col-3 text-md-right pt-2 pt-md-4">
                                    <h6 class="fw-semibold">
                                        @item.Movie.Price
                                        <span class="text-muted">&nbsp;x&nbsp;</span>@item.count
                                    </h6>
                                </div>
                                <div class="col-6 col-sm-4 col-lg-6 pt-2">
                                    <div class="w-75 btn-group" role="group">
                                            <a href="/Customer/Cart/Increment?movieId=@item.MovieId" class="btn btn-outline-primary bg-gradient py-2">
                                            <i class="bi bi-plus-square"></i>
                                        </a> &nbsp; 
                                            <a href="/Customer/Cart/Decrement?movieId=@item.MovieId" class="btn btn-outline-primary bg-gradient py-2">
                                            <i class="bi bi-dash-square"></i>
                                        </a>
                                    </div>

                                </div>
                                <div class="col-3 col-sm-4 col-lg-2 offset-lg-1 text-right pt-2">
                                        <a href="/Customer/Cart/Delete?movieId=@item.MovieId" class="btn btn-danger bg-gradient py-2 ">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </div>
                            </div>

                        </div>
                    }


                </div>
            </div>
            <div class="card-footer bg-white border-0">
                <div class="row">
                    <div class="col-md-4 offset-md-4">
                        <ul class="list-group mb-4">
                            <li class="d-flex justify-content-between align-items-center">
                                <h5 class="text-dark fw-semibold text-uppercase">  @ViewBag.Total (USD)</h5>
                                <h4 class="text-dark fw-bolder">$$</h4>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 offset-md-5">
                        <a href="/Customer/Cart/Pay" class="btn btn-primary border-0 bg-gradient w-100 py-2">Pay</a>
                    </div>
                </div>
            </div>
        </div>
</form>
}
<style>
     .no-movies-container {
         display: flex;
         justify-content: center;
         align-items: center;
         height: 100vh;
         background-color: #f8f9fa;
     }

     .no-movies-message {
         text-align: center;
         padding: 40px;
         background-color: #ffffff;
         border-radius: 10px;
         box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
         max-width: 500px;
         width: 100%;
     }

         .no-movies-message h1 {
             font-size: 2.5rem;
             color: #343a40;
             font-weight: bold;
             margin-bottom: 20px;
         }

         .no-movies-message p {
             font-size: 1.2rem;
             color: #6c757d;
             margin-bottom: 15px;
         }

         .no-movies-message a {
             text-decoration: none;
             font-size: 1.1rem;
             padding: 12px 24px;
             border-radius: 5px;
             background-color: #007bff;
             color: white;
             transition: background-color 0.3s ease;
         }

             .no-movies-message a:hover {
                 background-color: #0056b3;
             }

   

     .no-movies-message p {
         font-size: 1rem;
     }

     .no-movies-message a {
         font-size: 1rem;
         padding: 10px 20px;
     }

     }
</style>