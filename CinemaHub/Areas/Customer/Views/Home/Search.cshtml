
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-12 col-md-6 mb-4 d-flex">
            <div class="card" style="width: 100%;">
                <div class="card-header text-center">
                    <h5 class="card-title">@item.Name</h5>
                </div>

                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="~/movies/@item.ImgUrl" class="card-img" alt="Image of @item.Name" style="max-height: 600px; object-fit: cover;">
                    </div>

                    <div class="col-md-8">
                        <div class="card-body">
                            <p class="card-text">Description: @item.Description</p>

                            <p class="card-text">
                                Price:
                                <span style="background-color: gray; padding: 5px 10px; border-radius: 5px;">
                                    $@item.Price
                                </span>
                            </p>

                            <p class="card-text">Cinema: @item.Category.Name  </p>
                            <p class="card-text">Start Date: @item.StartDate.ToShortDateString()</p>
                            <p class="card-text">End Date: @item.EndDate.ToShortDateString()</p>
                            <p class="card-text">Category:@item.Cinema.Name  </p>

                            <!-- Display actors if available -->
                            @*  @if (item.Actors != null && item.Actors.Count > 0)
                        {
                        <p class="card-text">Actors:</p>
                        <ul>
                        @foreach (var actor in item.Actors)
                        {
                        <li>@actor.Name</li>
                        }
                        </ul>
                        } *@

                            <p>Trailer:</p>
                            <!-- Trailer Image or Video -->
                            @if (!string.IsNullOrEmpty(item.TrailerUrl))
                            {
                                <div class="trailer">
                                    <video controls style="width: 100%;">
                                        <source src="@item.TrailerUrl" type="video/mp4">
                                        Your browser does not support the video tag.
                                    </video>
                                </div>
                            }
                            else
                            {
                                <img src="@item.TrailerImgUrl" class="card-img" alt="Trailer image" style="max-height: 200px; object-fit: cover;">
                            }

                            <!-- Booking button -->
                            <div class="mt-3">
                                <a href=" " class="btn btn-success">Book Ticket</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
