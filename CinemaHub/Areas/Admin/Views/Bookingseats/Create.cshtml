 @model Bookingseats
 
<div class="container mt-5">
    <div class="row mb-3">
        <h2><a href="/Admin/Bookingseats/Index"><i class="bi bi-arrow-left"></i></a> Create New Bookingseat </h2>
    </div>

    <form method="post" action="/Admin/Bookingseats/Create">
        <div class="mb-3">
            <label for="cinemaHall" class="form-label">Cinema Hall</label>
            <select class="form-control" id="cinemaHall" name="CinemaHallId" required>
                <option value="">Select Cinema Hall</option>
                @foreach (var hall in ViewBag.CinemaHalls as List<CinemaHall>)
                {
                    <option value="@hall.Id">@hall.number</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label for="cinema" class="form-label">Cinema</label>
            <select class="form-control" id="cinema" name="CinemaId" required>
                <option value="">Select Cinema</option>
                @foreach (var cinema in ViewBag.Cinemas as List<Cinema>)
                {
                    <option value="@cinema.Id">@cinema.Name</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label for="movie" class="form-label">Movie</label>
            <select class="form-control" id="movie" name="MovieId" required>
                <option value="">Select Movie</option>
                @foreach (var movie in ViewBag.Movies as List<Movie>)
                {
                    <option value="@movie.MovieId">@movie.Name</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label for="dateTime" class="form-label">Date and Time</label>
            <input type="datetime-local" class="form-control" id="dateTime" name="DateTime" required>
        </div>
        <div class="mb-3">
            <p class="text-muted">
                If you want to book seats next to each other, please specify the seat range (From - To).
                If you prefer a single seat, just enter the seat number in the "Number of Seat" field.
            </p>
        </div>
        <div class="mb-3">
            <label for="from" class="form-label">From Seat</label>
            <input type="number" class="form-control" id="from" name="from" min="1">
        </div>

        <div class="mb-3">
            <label for="to" class="form-label">To Seat</label>
            <input type="number" class="form-control" id="to" name="to" min="1">
        </div>

        <div class="mb-3">
            <label for="numberseat" class="form-label">Number of Seat</label>
            <input type="number" class="form-control" id="numberseat" name="numberseat" min="1">
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Create Bookingseat</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial.cshtml"></partial>
}
 
<style>
    .container {
        background-color: #f9f9f9;
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .btn-primary {
        background-color: #3498db;
        border-color: #3498db;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #2980b9;
            border-color: #2980b9;
            transform: scale(1.05);
        }

    .form-label {
        font-weight: bold;
    }

    .form-control {
        border-radius: 5px;
        padding: 10px;
    }

    .btn {
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn:hover {
            background-color: #0069d9;
            color: white;
            transform: scale(1.05);
        }

    .modal-content {
        border-radius: 10px;
    }

    .modal-header {
        border-bottom: 1px solid #ddd;
    }

    .modal-footer button {
        border-radius: 5px;
    }
</style>
