 @model CinemaHall
<div class="container mt-5">
    <div class="row mb-3">
        <h2><a href="/Admin/CinemaHall/Index"><i class="bi bi-arrow-left"></i></a> Create CinemaHall</h2>
    </div>

    <form asp-action="Create" asp-controller="CinemaHall" method="post">
        <div class="mb-3">
            <label for="number" class="form-label"> number</label>
<input class="form-control" asp-for="number">
            <span asp-validation-for="number" class="text-bg-warning"></span>
        </div>
        <div class="mb-3">
            <label for="seats" class="form-label"> seats</label>
            <input class="form-control" asp-for="seats">
            <span asp-validation-for="seats" class="text-bg-warning"></span>
        </div>
        <select class="form-select" name="CinemaId">
          
            @foreach (var item in ViewBag.Cinemas)
            {
                    <option value="@item.Id">@item.Name</option>
            }
        </select>
        <span asp-validation-for="CinemaId" class="text-bg-warning"></span>
        </br>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial.cshtml"></partial>
}
<style>
    .container {
        background-color: #f9f9f9;
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .btn-primary {
        background-color: #3498db;
        border-color: #3498db;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #2980b9;
            border-color: #2980b9;
            transform: scale(1.05);
        }

    .form-label {
        font-weight: bold;
    }

    .form-control {
        border-radius: 5px;
        padding: 10px;
    }

    .btn {
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn:hover {
            background-color: #0069d9;
            color: white;
            transform: scale(1.05);
        }

    .modal-content {
        border-radius: 10px;
    }

    .modal-header {
        border-bottom: 1px solid #ddd;
    }

    .modal-footer button {
        border-radius: 5px;
    }
</style>
