  @model CinemaHall
<div class="container mt-4">
    <div class="row mb-3">
        <h2><a href="/Admin/CinemaHall/Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Back to CinemaHall</a> Edit Category: @Model.Cinema.Name/h2>
    </div>

    <form asp-action="Edit" asp-controller="CinemaHall" method="post">
        <input type="hidden" class="form-control" id="CategoryName" name="Id" value="@Model.Id">

        <div class="mb-3">
            <label for="number" class="form-label"> number</label>
            <input asp-for="number" class="form-control" placeholder="Enter number" required>
            <span asp-validation-for="number" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="seats" class="form-label">seats</label>
            <input asp-for="seats" class="form-control" placeholder="Enter seats" required>
            <span asp-validation-for="seats" class="text-danger"></span>
        </div>    
        <select class="form-select" name="CinemaId">

            @foreach (var item in ViewBag.Cinemas)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
        <span asp-validation-for="CinemaId" class="text-bg-warning"></span>

        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
</div>
