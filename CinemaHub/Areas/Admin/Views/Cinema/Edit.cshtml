@model Cinema
<div class="container mt-4">
    <div class="row mb-3">
        <h2><a href="/Admin/Cinema/Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Back to Cinemas</a> Edit Cinema: @Model.Name</h2>
    </div>

    <form action="/Admin/Cinema/Edit" enctype="multipart/form-data" method="post">
        <input type="hidden" name="Id" value="@Model.Id">

        <div class="mb-3">
            <label for="CinemaName" class="form-label">Cinema Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter cinema name" required>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="Address" class="form-label">Address</label>
            <input asp-for="Address" class="form-control" placeholder="Enter address">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="CinemaLogo" class="form-label">Cinema Logo</label>
            <input type="file" class="form-control" id="CinemaLogo" name="CinemaLogo" onchange="previewImage(event)">
            <img id="imagePreview" src="~/CinemaLogo/@Model.CinemaLogo" alt="Logo Preview" class="img-thumbnail mt-3" style="max-width: 150px;">
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
</div>
