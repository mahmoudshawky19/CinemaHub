@model Category
<div class="container mt-4">
    <div class="row mb-3">
        <h2><a href="/Admin/Category/Index_Two" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Back to Categories</a> Edit Category: @Model.Name</h2>
    </div>

    <form asp-action="Edit" asp-controller="Category" method="post">
        <input type="hidden" class="form-control" id="CategoryName" name="Id" value="@Model.Id">

        <div class="mb-3">
            <label for="CategoryName" class="form-label">Category Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter category name" required>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
</div>
