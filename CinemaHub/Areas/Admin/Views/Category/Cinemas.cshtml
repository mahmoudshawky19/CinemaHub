<div class="row mb-4">
    <div class="col-12">
        <h2 class="display-4 text-center text-gradient font-weight-bold">
            <i class="bi bi-film me-2"></i> Cinemas
        </h2>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <table class="table table-striped table-bordered shadow-lg">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Cinema Name</th>
                    <th scope="col">Cinema Image</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="table-hover">
                        <td>@item.Name</td>
                        <td>
                            <img src="~/CinemaLogo/@item.CinemaLogo" alt="@item.Name" class="cinema-img">
                        </td>
                        <td>
                            <div class="d-flex justify-content-center">
                                <a href="@Url.Action("Kinds", "Category", new { name = item.Name })" class="btn btn-outline-primary btn-lg p-3 d-flex align-items-center text-decoration-none transition-transform transform-hover">
                                    <i class="bi bi-film me-2"></i> All Movies
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>

<style>
    .text-gradient {
        background: linear-gradient(to right, #00b4db, #0083b0);
        -webkit-background-clip: text;
        color: transparent;
    }

    .font-weight-bold {
        font-weight: 600;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
        cursor: pointer;
    }

    .btn-outline-primary {
        border-width: 2px;
        padding-left: 20px;
        padding-right: 20px;
    }

        .btn-outline-primary:hover {
            background-color: #007bff;
            color: white;
        }

    .transition-transform {
        transition: transform 0.3s ease;
    }

        .transition-transform:hover {
            transform: scale(1.1);
        }

    .cinema-img {
        width: 50px;
        height: 50px;
        object-fit: cover;
        border-radius: 5px;
    }
</style>
