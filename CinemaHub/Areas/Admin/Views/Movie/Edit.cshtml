@model Movie
<div class="row mb-3">
    <h2>
        <a href="/Admin/Movie/Index">
            <i class="bi bi-arrow-left"></i>
        </a>
        Edit Movie: @Model.Name
    </h2>
</div>

<div class="row">
    <form asp-action="Edit" asp-controller="Movie" enctype="multipart/form-data" method="post">
        <div class="mb-3">
            <input type="hidden" class="form-control" id="CinemaName" name="MovieId" value="@Model.MovieId">

            <label for="Name" class="form-label">Movie Name</label>
            <input asp-for="Name" class="form-control">
        </div>

        <div class="mb-3">
            <label for="Description" class="form-label">Description</label>
            <input asp-for="Description" class="form-control">
        </div>

        <div class="mb-3">
            <label for="Price" class="form-label">Price</label>
            <input asp-for="Price" class="form-control">
        </div>

        <div class="mb-3">
            <label for="StartDate" class="form-label">Start Date</label>
            <input asp-for="StartDate" class="form-control">
        </div>

        <div class="mb-3">
            <label for="EndDate" class="form-label">End Date</label>
            <input asp-for="EndDate" class="form-control">
        </div>

        <div class="mb-3">
            <label for="MovieStatus" class="form-label">Movie Status</label>
            <select class="form-select" asp-for="MovieStatus">
                @foreach (var status in ViewBag.MovieStatus as List<Models.MovieStatus>)
                {
                    <option value="@status">@status</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label for="MoviesImgUrl" class="form-label">Movie Image</label>
            <input type="file" class="form-control" id="MoviesImgUrl" name="ImgUrl" onchange="previewImage(event)" value="@Model.ImgUrl">
            <img id="imagePreview" src="~/movies/@Model.ImgUrl" alt="Image Preview" style="margin-top: 10px; max-width: 300px;">
        </div>

        <div class="mb-3">
            <label for="TrailerUrl" class="form-label">Movie Trailer URL</label>
            <input asp-for="TrailerUrl" class="form-control">
        </div>

        <label for="Cinema" class="form-label">Cinema</label>
        <select class="form-select" name="CinemaId">
            <option value="">Select Cinema</option>
            @foreach (var item in ViewBag.c)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>

        <br>

        <label for="Category" class="form-label">Category</label>
        <select class="form-select" name="CategoryId">
            <option value="">Select Category</option>
            @foreach (var item in ViewBag.ce)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>

        <br>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
